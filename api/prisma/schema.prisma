generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  uname     String
  uemail    String   @unique
  upassword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Project {
  id        Int      @id @default(autoincrement())
  ptitle    String
  pdesc     String   @unique
  pstacks   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}
